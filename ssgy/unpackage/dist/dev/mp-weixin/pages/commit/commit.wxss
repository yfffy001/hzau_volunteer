view {
  font-size: 30rpx;
}
.navBar1 {
  height: 64rpx;
  width: 100%;
  text-align: center;
  line-height: 200%;
  border-bottom: solid 1rpx #d9d9d9;
  position: fixed;
  background-color: white;
  z-index: 100;
}
.navBar1 .textpic {
  height: 64rpx;
  width: 64rpx;
  float: right;
}
.navBar1 .textpic .addbu {
  height: 64rpx;
  width: 64rpx;
  padding: 0;
  border-radius: 50%;
}
.navBar1 .textpic .addbu .add {
  align-items: center;
  height: 64rpx;
  width: 64rpx;
}
.navBar2 {
  width: 100%;
  height: 64rpx;
  background-color: #FFFFFF;
  opacity: 1;
}
.itemList {
  width: 100%;
  border-bottom: solid 1rpx #d9d9d9;
  box-sizing: border-box;
}
.itemList .headPic {
  padding: 4rpx;
}
.itemList .headPic .headPicNav {
  display: inline;
}
.itemList .headPic image {
  height: 70rpx;
  width: 70rpx;
  border-radius: 50%;
}
.itemList .contentText {
  padding: 10rpx;
}
.itemList .contentText .conTextPar {
  display: block;
  font-family: "STXinwei";
  font-size: 35rpx;
}
.itemList .contentImage {
  padding: 4rpx;
}
.itemList .contentImage .image_item {
  overflow: hidden;
  display: inline;
  position: relative;
}
.itemList .contentImage .image_item .conPic {
  margin: 2rpx;
  width: calc((100vw - 40rpx) / 3);
  height: calc((100vw - 40rpx) / 3);
}
.itemList .contentBottom {
  padding: 4rpx;
}
.itemList .contentBottom .time {
  padding-left: 5rpx;
  font-size: 25rpx;
  display: inline;
}
.itemList .contentBottom .operaBox {
  display: inline;
  float: right;
}
.itemList .contentBottom .operaBox .operaIconBu {
  width: 55rpx;
  height: 45rpx;
  padding: 0;
  background-color: white;
}
.itemList .contentBottom .operaBox .operaIcon {
  padding-right: 5rpx;
  margin-bottom: 24rpx;
  width: 55rpx;
  height: 45rpx;
}
.itemList .commentList {
  padding: 8rpx;
  width: 100%;
}
.itemList .commentList .likeContent {
  height: 45rpx;
  margin-bottom: 10rpx;
  border-radius: 80rpx;
  background-color: #efefef;
}
.itemList .commentList .likeContent .likeHeartIcon {
  width: 35rpx;
  height: 35rpx;
}
.itemList .commentList .commentItem {
  height: 80rpx;
  margin-bottom: 10rpx;
  border-radius: 80rpx;
  background-color: #efefef;
}

